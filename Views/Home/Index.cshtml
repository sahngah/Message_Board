@{
    ViewData["Title"] = "Home Page";
}
@model userDashboard.Models.LoginUser

<h1>Sign in for the Wall!</h1>
@if(ViewBag.isThere != false)
{
<p>@ViewBag.Error</p>
}
<form asp-controller="Home" asp-action="Login" method="post" role="form">
  <div asp-validation-summary="All"></div>
   <div class="form-group">
    <label for="email">Email:</label>
    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email">
  </div>
   <div class="form-group">
    <label for="password">Password:</label>
    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<h1>Haven't signed up yet? Sign up!</h1>
<a href="register">Click here to sign up!</a>

